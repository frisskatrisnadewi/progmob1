<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:id="@+id/linear1">

        
        <com.synnapps.carouselview.CarouselView
            android:id="@+id/v_flipper"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
<!--        <ImageView
            android:id="@+id/imagebig"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/Imgbig"
            />-->

    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear1"
            android:id="@+id/tv1"
            android:text="PRODUCTS"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/imr1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/casual"
                android:clickable="true"
                />

            <ImageView
                android:layout_toRightOf="@+id/imr1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imr2"
                android:src="@drawable/wedding"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:layout_toRightOf="@+id/imr2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imr3"
                android:src="@drawable/mansuit"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:id="@+id/imr4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/imr3"
                android:src="@drawable/bridemaid" />

            <TextView
                android:id="@+id/tvd1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Dress"
                android:gravity="center"
                android:layout_below="@+id/imr1"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tvd2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Bride Dress"
                android:layout_toRightOf="@+id/tvd1"
                android:gravity="center"
                android:layout_below="@+id/imr2"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Man Suits"
                android:layout_toRightOf="@+id/tvd2"
                android:gravity="center"
                android:layout_below="@+id/imr3"
                android:layout_marginLeft="40dp"
                android:id="@+id/tvd3"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Bridesmaid"
                android:layout_toRightOf="@+id/tvd3"
                android:gravity="center"
                android:layout_below="@+id/imr4"
                android:layout_marginLeft="25dp"
                android:id="@+id/tvd4"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative1"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/imr5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/kebayauuu"
                />

            <ImageView
                android:layout_toRightOf="@+id/imr5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imr6"
                android:src="@drawable/bali_couple"
                android:layout_marginLeft="40dp"/>

            <ImageView
                android:layout_toRightOf="@+id/imr6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imr7"
                android:src="@drawable/dance"
                android:layout_marginLeft="40dp"/>



            <TextView
                android:id="@+id/tvd5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Kebaya"
                android:gravity="center"
                android:layout_below="@+id/imr5"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/tvd6"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Balinese Wedding"
                android:layout_toRightOf="@+id/tvd5"
                android:gravity="center"
                android:layout_below="@+id/imr6"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:text="Balinese Dance"
                android:layout_toRightOf="@+id/tvd6"
                android:gravity="center"
                android:layout_below="@+id/imr7"
                android:layout_marginLeft="25dp"
                android:id="@+id/tvd7"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/peachlove"
            >
            <TextView
                android:id="@+id/tvdhotproduct"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="HOT PRODUCTS"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/peach"/>

            <LinearLayout
                android:id="@+id/linear_hot1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_below="@+id/tvdhotproduct"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_hot1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Rp.20.000/day"
                    android:textSize="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_hot2"
                android:layout_toRightOf="@+id/linear_hot1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_below="@+id/tvdhotproduct"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_hot2"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Rp.20.000/day"
                    android:textSize="11dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_hot3"
                android:layout_toRightOf="@+id/linear_hot2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_below="@+id/tvdhotproduct"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_hot3"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Rp.20.000/day"
                    android:textSize="10dp"
                    />
            </LinearLayout>

           <!-- <LinearLayout
                android:id="@+id/linear_hot4"
                android:layout_toRightOf="@+id/linear_hot3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_below="@+id/tvdhotproduct"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_hot4"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Rp.20.000/day"
                    android:textSize="10dp"
                    />
            </LinearLayout>-->



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:background="@color/peachlove"
            >
            <TextView
                android:id="@+id/tvdhotproduct2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="NEW ARRIVAL"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/peach"/>

            <LinearLayout
                android:id="@+id/linear_hot5"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_below="@+id/tvdhotproduct2"
                android:background="@color/white"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_hot6"
                    android:layout_marginLeft="5dp"
                    android:layout_width="70dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Rp.20.000/day"
                    android:textSize="10dp"
                    />
            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>
    </ScrollView>
    </LinearLayout>



